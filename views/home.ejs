<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Home page</title>
<% if (!user) { %>
	<p>Welcome! Please <a href="/login">log in</a>.</p>
<% } else { %>
	<p>Hello, <%= user.username %>. View your <a href="/profile">profile</a>.</p>
	<br />
	<a href="exp://127.0.0.1:19000?id=<%= user.id %>">Go back to the app</a>
	<br />
	<br />
	<a href="/getUserInfo/<%= user.id %>">Request user info</a>
	<br />
	<br />
	<a href="/listUserRepos/<%= user.id %>">Request user repos</a>
	<br />
	<br />
	<a href="/listPullRequests/<%= user.id %>">Request user pull requests for a repository</a>
<% } %>
